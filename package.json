{
  "name": "cat-herder",
  "version": "0.1.11",
  "description": "An ECS implementation in TypeScript",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "umd": "dist/cat-herder.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "umd": "./dist/cat-herder.js",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "build-fast": "tsup",
    "build": "run-s clean build-fast copy-dts",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "prepare": "is-ci || husky",
    "start": "TZ=UTC vitest --watch",
    "test": "TZ=UTC vitest"
  },
  "files": [
    "dist"
  ],
  "repository": "schtauffen/cat-herder",
  "author": "Zach Dahl<z.schtauffen@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "2.4.1",
    "eslint-config-xo-space": "0.35.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "vitest": "3.0.8",
    "xo": "0.60.0"
  },
  "dependencies": {
    "bitset": "5.2.3"
  },
  "xo": {
    "space": true,
    "rules": {
      "capitalized-comments": "off"
    }
  }
}
